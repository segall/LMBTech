@model LMBTech.Models.Person

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Person</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">

            <div class="col-md-10">
                @Html.LabelFor(m => m.Name)
                <br />
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                @Html.LabelFor(m => m.Surname)
                <br />
                @Html.TextBoxFor(m => m.Surname)
                @Html.ValidationMessageFor(m => m.Surname)
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                @Html.LabelFor(m => m.Age)
                <br />
                @Html.TextBoxFor(m => m.Age)
                @Html.ValidationMessageFor(m => m.Age)
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                @Html.LabelFor(m => m.Country)
                <div id="CountryContainer">
                    @Html.Action("CountryView")
                </div>
                @Html.ValidationMessageFor(m => m.Country)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.Region)
                <div id="RegionContainer">
                    @Html.Action("RegionView")
                </div>
                @Html.ValidationMessageFor(m => m.Region)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        function log(data) {
            if (console) {
                console.log(data);
            }
        }

        $(function () {
            $('#Country-DropdownID').change(function () {
                var selectedCountryID = this.value;
                $('#RegionContainer').load('@Url.Action("RegionView")?countryID=' + selectedCountryID);
            });
        });
    </script>
}
